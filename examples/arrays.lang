import a from "../../lib/stdlib.lang"

# Predicates
let square = item -> item * item

let sum = arr ->
  reduce(arr, 0, (acc, item) -> acc + item)

let greaterThenTwo = item -> item > 2

# Testing array
let array = [
  0, 1, 2, 3,
  4, 5, 6, 7
]

# Output
foreach(array, (item, index) -> puts("Item:", item, "at index:", index))
puts("Array squares:", map(array, square))
puts("Array sum:", sum(array))
puts("Only > 2:", filter(array, greaterThenTwo))

let reverse = arr -> {
  let reversed = []

  foreach(arr, (_, index) -> {
    reversed = push(reversed, arr[len(arr) - 1 - index ])
  })

  reversed
}

puts("Reversed array:", reverse(array))

let isTruthy = item -> boolean(item)

puts("Some array element are truthy:", some(array, isTruthy))
puts("All array element are truthy:", every(array, isTruthy))
